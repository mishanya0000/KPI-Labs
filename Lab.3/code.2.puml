@startuml
title Sequence Diagram â€“ User Authorization

actor User
participant AuthService
database Database
participant SessionManager
participant NotificationService

User -> AuthService : login(username, password)
AuthService -> Database : validateCredentials(username, password)
Database --> AuthService : validationResult

alt credentials valid
    AuthService -> SessionManager : createSession(userID)
    SessionManager --> AuthService : sessionToken
    AuthService -> NotificationService : sendLoginSuccess(userID)
    NotificationService --> User : "Login successful"
else invalid credentials
    AuthService -> NotificationService : sendLoginFailure(username)
    NotificationService --> User : "Invalid username or password"
end

@enduml
