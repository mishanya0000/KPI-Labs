OrderService --> Customer : productAdded

Customer -> OrderService : createOrder(orderDetails)
OrderService -> OrderService : calculateTotal()
OrderService --> Customer : orderSummary

Customer -> PaymentService : processPayment(orderID, paymentInfo)
PaymentService -> Database : recordPayment()
Database --> PaymentService : paymentConfirmed
PaymentService --> OrderService : paymentSuccess

OrderService -> Database : saveOrder(orderData)
Database --> OrderService : orderSaved

OrderService --> Customer : confirmOrder()

